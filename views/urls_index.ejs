
<%- include('partials/_head.ejs') %>

<main>

  <%- include('partials/_header.ejs', { email: email }) %>
  <%- include('partials/_alert.ejs', {success: success, message: message }) %>

  <h3 class="m-4">My URLs</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col" class="pl-4">Short URL</th>
        <th scope="col">Long URL</th>
        <th scope="col">Edit</th>
        <th scope="col" class="text-center">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for(let url in urls) { %>
        <tr>
          <td class="align-middle pl-4"><%= urls[url].short_url %></td>
          <td class="align-middle"><a href="<%= urls[url].long_url %>"><%= urls[url].long_url %></a></td>
          <td class="align-middle"><a href="/urls/<%= urls[url].short_url %>">Edit</a></td>
          <td class="align-middle text-center">
            <form method="POST" action="/urls/<%= url %>/delete" id="form1">
              <button class="btn btn-outline-danger" type="submit" form="form1" value="Submit">Delete</button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</main>

<%- include('./partials/_footer.ejs') %>
