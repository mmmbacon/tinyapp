<div class="container-fluid">
  <div class="col">
    <div class="row">
        <div id="<%= success ? '' : 'fadeAlert' %>" 
          class="alert alert-danger fixed-bottom w-100"
          style="opacity: 0" 
          role="alert">
          <%= message %>
        </div>
        <div id="<%= success ? 'fadeAlert' : '' %>" 
          class="alert alert-success fixed-bottom w-100 <%= message ? '' : 'd-none'%>" 
          style="opacity: 0"
          role="alert">
          <%= message %>
        </div>
    </div>
  </div>
</div>